//create an application with following roles:
// 1.Admin - gets full access to create/delete courses.Admin
// 2.Subadmin - gets access to create/delelte courses.
// 3.Testprep - gets access to create/delete tests. 
//4.user - gets access to consume content.

var user = "Admin";
switch(user){
    case "Admin":
    console.log("gets full access to create/delete courses.");
    break;
    case "Subadmin":
        console.log("gets access to create/delete courses");
        break;
        case "Testprep":
            console.log("gets access to create /delete tests.");
            break;
            case "User":
                console.log("gets access to consume content");
                break;
    default:
        console.log("Trial user");
        break;
};